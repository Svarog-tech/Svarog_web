# Nginx configuration for HestiaCP
# Place this file in: /home/USERNAME/web/DOMAIN/public_html/nginx.conf
# Or add to HestiaCP: Web > Domain > Edit > Advanced > Nginx Directives

server {
    listen 80;
    listen [::]:80;
    server_name YOUR_DOMAIN.com www.YOUR_DOMAIN.com;
    
    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name YOUR_DOMAIN.com www.YOUR_DOMAIN.com;
    
    # SSL certificates (HestiaCP manages these)
    ssl_certificate /home/USERNAME/conf/web/ssl/YOUR_DOMAIN.com.crt;
    ssl_certificate_key /home/USERNAME/conf/web/ssl/YOUR_DOMAIN.com.key;
    
    # SSL configuration (hardened)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_session_tickets off;
    
    # OCSP Stapling (pokud je podporováno)
    # ssl_stapling on;
    # ssl_stapling_verify on;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    
    # Root directory (React build)
    root /home/USERNAME/web/YOUR_DOMAIN/public_html/build;
    index index.html;
    
    # SECURITY: Skrýt Nginx verzi
    server_tokens off;
    
    # SECURITY: Blokování directory listing
    autoindex off;
    
    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/json application/javascript;
    
    # SECURITY: Rate limiting zones (přidejte do hlavní nginx.conf nebo zde)
    # limit_req_zone $binary_remote_addr zone=api_limit:10m rate=20r/s;
    # limit_req_zone $binary_remote_addr zone=auth_limit:10m rate=5r/m;
    
    # API proxy to Node.js backend
    location /api/ {
        # SECURITY: Rate limiting pro API
        # limit_req zone=api_limit burst=30 nodelay;
        
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
        
        # SECURITY: Timeout pro pomalé requesty
        proxy_send_timeout 300s;
    }
    
    # SECURITY: Rate limiting pro auth endpointy
    location /api/auth/ {
        # limit_req zone=auth_limit burst=3 nodelay;
        
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Health check
    location /health {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Serve React static files
    location / {
        try_files $uri $uri/ /index.html;
        
        # Cache static assets
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }
    
    # Deny access to hidden files and sensitive directories
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # SECURITY: Block access to .env files
    location ~ /\.env {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # SECURITY: Block access to logs directory
    location ~ ^/logs/ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # SECURITY: Block access to node_modules, .git, etc.
    location ~ ^/(node_modules|\.git|\.env|package\.json|package-lock\.json|server\.js) {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # SECURITY: Block directory traversal attempts
    location ~ \.\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # SECURITY: Blokování nebezpečných user-agents
    if ($http_user_agent ~* (nmap|nikto|wikto|sf|sqlmap|bsqlbf|w3af|acunetix|havij|appscan|dirb|gobuster)) {
        return 403;
    }
    
    # SECURITY: Blokování nebezpečných request metod
    if ($request_method !~ ^(GET|HEAD|POST|PUT|DELETE|OPTIONS)$ ) {
        return 405;
    }
    
    # SECURITY: Blokování přístupu k backup souborům
    location ~ \.(bak|backup|old|orig|save|swp|tmp|~)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # SECURITY: Blokování přístupu k PHP souborům (pokud nepoužíváte PHP)
    # Odkomentujte pokud nepoužíváte PHP:
    # location ~ \.php$ {
    #     deny all;
    #     access_log off;
    #     log_not_found off;
    # }
    
    # SECURITY: Omezení velikosti request body
    client_max_body_size 10M;
    client_body_buffer_size 128k;
    
    # SECURITY: Timeout nastavení
    client_body_timeout 60s;
    client_header_timeout 60s;
    send_timeout 60s;
}
